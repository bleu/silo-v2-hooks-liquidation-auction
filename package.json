{
  "name": "silo-v2-hooks-liquidation-auction",
  "private": true,
  "scripts": {
    "build": "forge build",
    "test": "forge test",
    "anvil:start": "anvil --fork-url https://arb1.arbitrum.io/rpc --fork-block-number 302603188 --block-time 1",
    "anvil:deploy": "forge script script/DeployAuctionSetup.s.sol:DeployAuctionSetup --rpc-url http://localhost:8545 --broadcast --private-key $DEPLOYER_PK",
    "anvil:doubleBid": "forge script script/DoubleBid.s.sol:DoubleBid --rpc-url http://localhost:8545 --broadcast --private-key $DEPLOYER_PK",
    "anvil:doubleBid:bidderA:borrowerA": "forge script script/DoubleBid.s.sol:DoubleBid --sig 'run(address)' $BORROWER_A --rpc-url http://localhost:8545 --broadcast --private-key $BIDDER_A_PK",
    "anvil:doubleBid:bidderA:borrowerB": "forge script script/DoubleBid.s.sol:DoubleBid --sig 'run(address)' $BORROWER_B --rpc-url http://localhost:8545 --broadcast --private-key $BIDDER_A_PK",
    "anvil:doubleBid:bidderB:borrowerA": "forge script script/DoubleBid.s.sol:DoubleBid --sig 'run(address)' $BORROWER_A --rpc-url http://localhost:8545 --broadcast --private-key $BIDDER_B_PK",
    "anvil:doubleBid:bidderB:borrowerB": "forge script script/DoubleBid.s.sol:DoubleBid --sig 'run(address)' $BORROWER_B --rpc-url http://localhost:8545 --broadcast --private-key $BIDDER_B_PK"
  },
  "devDependencies": {
    "dotenv-cli": "^8.0.0"
  }
}
